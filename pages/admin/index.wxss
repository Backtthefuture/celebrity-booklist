.container {
  padding: 20rpx;
}

.section {
  margin-bottom: 30rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  color: #666;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.upload-btn {
  margin: 20rpx 0;
  background: #f8f8f8;
}

.preview-image {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

.book-list {
  margin-top: 20rpx;
}

.book-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.book-info {
  flex: 1;
}

.book-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.book-author {
  font-size: 24rpx;
  color: #666;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}

.btn {
  flex: 1;
  margin: 0 10rpx;
}

.celebrity-list {
  margin-top: 20rpx;
}

.celebrity-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.celebrity-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.celebrity-info {
  flex: 1;
}

.celebrity-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.celebrity-intro {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.book-count {
  font-size: 24rpx;
  color: #999;
}

.celebrity-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  margin: 5rpx;
  min-width: 120rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}

.action-btn.edit {
  background: #4CAF50;
  color: white;
}

.action-btn.delete {
  background: #f44336;
  color: white;
}

.add-book-btn {
  margin-top: 20rpx;
  background: #007AFF;
  color: white;
}

.save-btn {
  margin-top: 40rpx;
  background: #07C160;
  color: white;
}
