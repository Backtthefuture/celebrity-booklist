/* index.wxss */
.container {
  height: 100vh;
  background: #f6f6f6;
}

.swiper {
  height: 100%;
}

.swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.celebrity-card {
  width: 100%;
  height: 95%;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.celebrity-info {
  padding: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.introduction {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.book-list {
  flex: 1;
  padding: 20rpx;
}

.book-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.book-info {
  flex: 1;
}

.book-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
}

.book-author {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.book-description {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.admin-btn {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  z-index: 100;
}

.empty-state {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}
